<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="style.css">
        <link rel="icon" href="icon.png?v=1.1">
        <title>Re-Mind - Sign In</title>
    </head>
    <body>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <div class="container-fluid signInBody">
            <div class="row">
                <div class="col-6 signInImageContainer">
                    <img src="photo-1536098561742-ca998e48cbcc.avif" height="100%" width=100%/>
                </div>
                <div class="col-lg-6 signInContainer">
                    <div class="row signInNav">
                        <ul class="nav signInNavItems remindInteractable pe-sm-1 pe-0">
                            <li class="nav-item">
                                <a class="nav-link remindNavLink" href="/">Sign In</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link remindNavLink" href="/about">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link remindNavLink" href="/contactUs">Contact Us</a>
                            </li>
                        </ul>
                    </div>
                    <form action="/home" method="post">
                        <div class="row mb-sm-2 mb-4">
                            <h3 class="formLabel centerText">Sign In</h3>
                        </div>
                        <div class="row">
                            <div class="col-sm-2"></div>
                            <div class="col-sm-2 col-4 pt-1">
                                <label class="formLabel" for="inputUsername"><h5>Username</h5></label>
                            </div>
                            <div class="col-sm-6 col-8">
                                <input type="text" class="form-control" name="inputUsername" id="inputUsername" maxlength="32" required>
                            </div>
                            <div class="col-sm-2"></div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-sm-2"></div>
                            <div class="col-sm-2 col-4 pt-1">
                                <label class="formLabel" for="inputPassword"><h5>Password</h5></label>
                            </div>
                            <div class="col-sm-6 col-8">
                                <input type="password" class="form-control" name="inputPassword" id="inputPassword" maxlength="32" required>
                            </div>
                            <div class="col-sm-2"></div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-sm-2"></div>
                            <div class="col-sm-4 col-6 pt-2 buttonContainer">
                                <a href="/createAccount" class="signInLink centerText"><h5>Don't have an account?</h5></a>
                            </div>  
                            <div class="col-sm-4 col-6 formLabel buttonContainer">
                                <button type="submit" id="signInButton" class="btn formButton redButton"><h5>Sign In</h5></button>
                            </div>
                            <div class="col-sm-2"></div>
                        </div>
                    </form>
                    <% if (invalid) { %>
                        <div class="row">
                            <div class="col-2"></div>
                            <div class="col-8 mt-4">
                                <h5 class="centerText formLabel">Username and password not a valid combination.</h5>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </body> 
</html>