<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
        <link rel="stylesheet" href="/style.css">
        <link rel="icon" href="/icon.png?v=1.1">
        <title>Re-Mind - Add List</title>
    </head>
    <body class="reMindPage">
        <%- include('partials/navbar') %>
        <div class="container-xxl container-fluid remindBodyText">
            <form action="/lists" method="post">
                <div class="row">
                    <div class="col-12 mt-2">
                        <h3 class="homePageAndListHeader mb-0">New List</h3>
                    </div>
                    <div class="col-3">

                    </div>
                    <div class="col-6 reMindFormTiles shadow mt-2 pt-2 pb-2">
                        <label class="formLabel" for="listName">List Name</label>
                        <input type="text" class="form-control" name="listName" id="listName" placeholder="Enter List Name" required>
                    </div>
                    <div class="col-3">

                    </div>
                    <div class="col-3"></div>
                    <div class="col-6 reMindFormTiles shadow mt-2 pt-2" id="toDoItems">
                        <div class="container formListItem">
                            <label class="formLabel" for="listItem1">Enter List Item 1:</label>
                            <div class="listItemRow">
                                <input type="text" class="form-control me-1" name="listItem1" id="listItem1" placeholder="Enter List Item 1">
                                <i class="bi bi-trash bootstrapIcon reMindLinks" name="deleteIcon"></i>
                            </div>
                        </div>
                        <div class="d-flex mt-2 addItemsContainer">
                            <div class="addListItemLink me-2" id="addListItem">
                                <p class="reMindLinks">+ Add List Item</p>
                            </div>
                            <div class="addListGroupItemLink ms-auto" id="addGroupListLink">
                                <p class="reMindLinks">+ Add Group of Items</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-3"></div>
                    <div class="col-3"></div>
                    <div class="col-6 reMindFormTiles shadow d-flex mt-2 pt-1 pb-1" id="cancelAddListButtonsContainer">
                        <a href="/lists" class="btn formLabel">Cancel</a>
                        <button type="submit" id="addListButton" class="btn formLabel redButton ms-auto">Save</button>
                    </div>
                </div>
            </form>
            
            <div id="customItemGroupsModal" class="modal-container" hidden>
                <div class="modal-panel customItemGroupModal p-3">
                    <header class="modalHeader">
                        <div>
                            <h4 class="modal-title">Choose or Create an Item Group</h4>
                        </div>
                        <div class="ms-auto">
                            <button type="button" id="customItemGroupsClose" class="btn reMindLinks">&times;</button>
                        </div>
                    </header>
                    <div class="pt-2 pb-0">
                        <div class="container-fluid customItemGroupTable">
                            <% for (let counter = 0; counter < customItemGroups.length-1; counter++) { %>
                                <div class="row customItemGroupRow ms-0 me-0"  id="group<%=customItemGroups[counter].id%>">
                                    <div class="col-3 customItemGroupTitle"><%=customItemGroups[counter].title%></div>
                                    <div class="col-9 customItemGroupItems">
                                        <% for (let itemCounter = 0; itemCounter < customItemGroups[counter].items.length-1; itemCounter++) { %>
                                            <%= customItemGroups[counter].items[itemCounter][0] %>,&nbsp;
                                        <% } if (customItemGroups[counter].items.length > 0) {%>
                                            <%= customItemGroups[counter].items[customItemGroups[counter].items.length-1][0] %>
                                        <% } %>
                                    </div>
                                </div>
                            <% } if (customItemGroups.length > 0) {%>
                                <div class="row customItemGroupLastRow ms-0 me-0" id="group<%=customItemGroups[customItemGroups.length-1].id%>">
                                    <div class="col-3 customItemGroupTitle"><%=customItemGroups[customItemGroups.length-1].title%></div>
                                    <div class="col-9 customItemGroupItems">
                                        <% for (let itemCounter = 0; itemCounter < customItemGroups[customItemGroups.length-1].items.length-1; itemCounter++) { %>
                                            <%= customItemGroups[customItemGroups.length-1].items[itemCounter][0] %>,&nbsp;
                                        <% } if (customItemGroups[customItemGroups.length-1].items.length > 0) {%>
                                            <%= customItemGroups[customItemGroups.length-1].items[customItemGroups[customItemGroups.length-1].items.length-1][0] %>
                                        <% } %>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                        <div class="mt-0 container d-flex pe-0 rightAlignedLinkFlexContainer">
                            <p class="reMindLinks mb-0" id="createNewCustomGroup">+ Create New Group of Items</p>
                        </div>
                    </div>
                    <a class="btn formLabel" id="customItemGroupsCancel">Cancel</a>
                </div>
            </div>		
            
            <div id="createNewCustomGroupModal" class="modal-container" style="z-index: 1001" hidden>
                <section class="modal-panel customItemGroupModal p-3">
                    <header class="modalHeader">
                        <div>
                            <h4 class="modal-title">Create a New Item Group</h4>
                        </div>
                        <div class="ms-auto">
                            <button type="button" id="newItemsGroupClose" class="btn reMindLinks">&times;</button>
                        </div>
                    </header>
                    <form id="newItemGroupForm" class="mb-0">
                        <div class="pb-0">
                            <div class="ps-2 pe-2">
                                <label class="formLabel" for="groupName">Group Name</label>
                                <input type="text" class="form-control" name="groupName" id="groupName" placeholder="Enter Group Name" required>
                            </div>
                            <div class="mt-2 ps-2 pe-2" id="groupItems">
                                <div class="container formListItem">
                                    <label class="formLabel" for="groupItem1">Enter Group Item 1:</label>
                                    <div class="groupItemRow">
                                        <input type="text" class="form-control me-1" name="groupItem1" id="groupItem1" placeholder="Enter Group Item 1">
                                        <i class="bi bi-trash bootstrapIcon reMindLinks" name="groupDeleteIcon"></i>
                                    </div>
                                </div>
                                <div class="d-flex mt-2 addItemsContainer">
                                    <div class="addListItemLink me-2">
                                        <p class="reMindLinks mb-0" id="addGroupItem">+ Add Group Item</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex mt-2 pt-1 pb-1" id="cancelAddListButtonsContainer">
                            <a class="btn formLabel" id="newItemGroupCancel">Cancel</a>
                            <button type="button" id="addNewItemGroup" class="btn formLabel redButton ms-auto">Save</button>
                        </div>
                    </form>
                </section>
            </div>
        </div>  
    <script>
        let customItemGroups = <%- JSON.stringify(customItemGroups) %>;
    </script>
    <script src="/addListScript.js"></script>
    <script>
        let passedReminders = <%- JSON.stringify(passedReminders) %>;
    </script>
    <script src="notificationHandler.js"></script>
    <script>
        if ('serviceWorker' in navigator) {
          navigator.serviceWorker.register('/notification.js');
        }
        else
        {
            console.log("Error: Service Worker not Loaded");
        }
    </script>
</body>