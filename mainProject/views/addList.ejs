<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
        <link rel="stylesheet" href="/style.css">
        <link rel="icon" href="/icon.png">
        <title>Re-Mind - Add List</title>
    </head>
    <body class="reMindPage">
        <%- include('partials/navbar') %>
        <div class="container-xxl container-fluid remindBodyText">
            <form action="/lists" method="post">
                <div class="row">
                    <div class="col-12 mt-2">
                        <h3 class="homePageAndListHeader mb-0">New List</h3>
                    </div>
                    <div class="col-3">

                    </div>
                    <div class="col-6 reMindFormTiles shadow mt-2 pt-2 pb-2">
                        <label class="formLabel" for="listName">List Name</label>
                        <input type="text" class="form-control" name="listName" id="listName" placeholder="Enter List Name" required>
                    </div>
                    <div class="col-3">

                    </div>
                    <div class="col-3"></div>
                    <div class="col-6 reMindFormTiles shadow mt-2 pt-2" id="toDoItems">
                        <div class="container formListItem">
                            <label class="formLabel" for="listItem1">Enter List Item 1:</label>
                            <div class="listItemRow">
                                <input type="text" class="form-control me-1" name="listItem1" id="listItem1" placeholder="Enter List Item 1">
                                <i class="bi bi-trash bootstrapIcon reMindLinks" name="deleteIcon"></i>
                            </div>
                        </div>
                        <div class="addListItemLink mt-2" id="addListItem">
                            <p class="reMindLinks">+ Add List Item</p>
                        </div>
                    </div>
                    <div class="col-3"></div>
                    <div class="col-3"></div>
                    <div class="col-6 reMindFormTiles shadow d-flex mt-2 pt-1 pb-1" id="cancelAddListButtonsContainer">
                        <a href="/lists" class="btn formLabel">Cancel</a>
                        <button type="submit" id="addListButton" class="btn formLabel redButton ms-auto">Save</button>
                    </div>
                </div>
            </form>
        </div>  
    <script src="/addListScript.js"></script>
</body>