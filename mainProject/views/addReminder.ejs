<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="/style.css">
        <link rel="icon" href="/icon.png?v=1.1">
        <title>Re-Mind - Add Reminder</title>
    </head>
    <body class="reMindPage">
        <%- include('partials/navbar') %>
        <div class="container-xxl container-fluid remindBodyText">
            <form id="reminderForm" action="/reminders" method="post">    
                <div class="row">
                    <div class="col-12 mt-2">
                        <h3 class="homePageAndListHeader mb-0">New Reminder</h3>
                    </div>
                    <div class="col-3"></div>
                    <div class="col-6 reMindFormTiles shadow mt-2 pt-2 pb-2">
                        <label class="formLabel" for="listName">Reminder Name</label>
                        <input type="text" class="form-control" name="reminderName" id="reminderName" placeholder="Enter Reminder Name" required>
                    </div>
                    <div class="col-3">
            
                    </div>
                    <div class="col-3"></div>
                    <div class="col-6 reMindFormTiles shadow mt-2 pt-2" id="reminderFields">
                        <div class="container ps-0 mt-1">
                            What type of reminder would you like to set?<br />
                            <input class="form-check-input" type="radio" name="frequencyRadio" id="frequencyRadioOneTime"  value="oneTime" checked>
                            <label class="form-check-label" for="frequencyRadio">One Time Reminder</label> <br />
                            <input class="form-check-input" type="radio" name="frequencyRadio" id="frequencyRadioRepeated" value="repeated">
                            <label class="form-check-label" for="frequencyRadio">Repeated Reminder</label> <br /> 
                        </div>  
                        <div class="container-fluid ps-0 pe-1 mb-2 mt-1 d-flex" id="timePickerContainer">
                            <label id="timePickerLabel" for="timePicker">What time should this reminder notify you?</label><input type="time" name="timePicker" id="timePicker" class="ms-auto timePicker" required>
                        </div>
                        <div class="container-fluid ps-0 pe-1 mb-2 d-flex" id="datePickerContainer">
                            <label id="datePickerLabel" for="datePicker">What date should this reminder notify you?</label><input type="date" name="datePicker" id="datePicker" class="ms-auto datePicker" required>
                        </div>
                        <div class="container-fluid ps-0 pe-1 pb-3 form-floating" id="reminderDescriptionContainer">
                            <textarea class="form-control" id="reminderDescription" name="reminderDescription"></textarea>
                            <label for="reminderDescription">Please enter a description of the reminder:</label>
                        </div>
                    </div>
                    <div class="col-3"></div>
                    <div class="col-3"></div>
                    <div class="col-6 reMindFormTiles shadow d-flex mt-2 pt-1 pb-1" id="cancelAddListButtonsContainer">
                        <a href="/reminders" class="btn formLabel">Cancel</a>
                        <button type="button" id="addReminderButton" class="btn formLabel redButton ms-auto">Save</button>
                    </div>
                </div>
            </form>
        </div>
        <script src="/addReminderScript.js"></script>
        <script>
            let passedReminders = <%- JSON.stringify(passedReminders) %>;
        </script>
        <script src="notificationHandler.js"></script>
        <script>
            if ('serviceWorker' in navigator) {
              navigator.serviceWorker.register('/notification.js');
            }
            else
            {
                console.log("Error: Service Worker not Loaded");
            }
        </script>
    </body>
</html> 