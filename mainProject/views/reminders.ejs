<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="/style.css">
        <link rel="icon" href="/icon.png">
        <title>Re-Mind - Reminders</title>
    </head>
    <body class="reMindPage">
        <%- include('partials/navbar') %>
        <div class="container-xxl container-fluid remindBodyText">
            <div class="row justify-content-center">
                <div class="col-12 mt-2">
                    <h3 class="homePageAndListHeader mb-0">All Reminders</h3>
                </div>
                <div class="row justify-content-center">
                    <div class="col-3">

                    </div>
                    <div class="col-3 ms-3">
                        
                    </div>
                    <div class="col-3 alignTextEnd ms-3 me-1 addButton">
                        <a href="reminders/add" class="reMindLinks">+ Add Reminder</a>
                    </div>
                    <% if (Object.keys(reminders).length > 0) { %>
                        <% for (let reminderCounter = 0; reminderCounter < Object.keys(reminders).length; reminderCounter++) { %>
                            <% if (reminderCounter % 3 == 0) { %>
                                <div class="col-3 shadow mb-3 pt-1 pb-2 remindHomeTiles">
                            <% } else { %>
                                <div class="col-3 shadow ms-3 mb-3 pt-1 pb-2 remindHomeTiles">
                            <% } %>
                                <a href="/reminders/<%-reminders[reminderCounter].id%>" class="tileLink">
                                    <h4 class="homePageAndListHeader">
                                        <%= reminders[reminderCounter].name %>
                                    </h4>
                                    <h5>
                                        <% if (reminders[reminderCounter].frequency == "oneTime") { %>
                                            One Time Reminder <br />
                                        <% } else { %>
                                            <%= reminders[reminderCounter].frequency %> Reminder <br />
                                        <% } %>
                                        <% if (reminders[reminderCounter].frequency == "Weekly" || reminders[reminderCounter].frequency == "Biweekly") { %>
                                            <% for (let dayCounter = 0; dayCounter < reminders[reminderCounter].daysRepeated.length; dayCounter++) { %>
                                                <% if (dayCounter != reminders[reminderCounter].daysRepeated.length - 1) {%>
                                                    <%= reminders[reminderCounter].daysRepeated[dayCounter] +", " %>
                                                <% } else { %>
                                                    <%= reminders[reminderCounter].daysRepeated[dayCounter]%><br />
                                                <% } %>
                                            <% } %>
                                        <% } else if (reminders[reminderCounter].frequency == "oneTime") { %>
                                            <%= reminders[reminderCounter].dateNotified %> <br />
                                        <% } %>
                                        <%= reminders[reminderCounter].timeNotified %>
                                    </h5>
                                    <p>
                                        <%  if (reminders[reminderCounter].description.length < 300) {%> 
                                            <%= reminders[reminderCounter].description %>
                                        <% } else {%>
                                            <%= reminders[reminderCounter].description.substring(0,297) %>...
                                        <% } %>
                                    </p>
                                </a>
                            </div> 
                        <% } %>
                    <% } %>
                </div>
            </div>
        </div>
    </body>
</html> 