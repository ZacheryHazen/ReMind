<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/style.css">
    <link rel="icon" href="/icon.png">
    <title>Re-Mind - View List - <%=list.name%></title>
</head>
<body class="reMindPage">
    <%- include('partials/navbar') %>
    <div class="container-xxl container-fluid remindBodyText">
        <form action="/lists/<%=list.id%>?_method=PATCH" method="post">
            <div class="row">
                <div class="col-12 mt-2">
                    <h3 class="homePageAndListHeader">View List - <%=list.name%></h3>
                </div>
                <div class="col-3">
                </div>
                <div class="col-6 shadow remindFormTiles" id="toDoItems">
                    <% for (let itemCounter = 0; itemCounter < Object.keys(list.items).length; itemCounter++) { %>
                        <div class="container editViewItemRow d-flex pt-2">
                            <input type="checkbox" class="form-check-input me-2 pb-1">
                            <input type="text" class="form-control me-2 editViewItemInputReadonly" value="<%= list.items[itemCounter] %>" readonly placeholder="Enter List Item <%=itemCounter+1%>"></input>
                            <i class="bi bi-pencil ms-auto bootstrapIcon reMindLinks" name="editIcon"></i>
                            <i class="bi bi-trash bootstrapIcon reMindLinks ms-2" name="deleteIcon"></i>
                        </div>
                    <% } %>
                    <div class="addListItemLink mt-2" id="addListItem">
                        <p class="reMindLinks">+ Add List Item</p>
                    </div>
                </div> 
                <div class="col-3"></div>
                <div class="col-3"></div>
                <div class="col-6 reMindFormTiles d-flex shadow mt-2 pt-1 pb-1" id="cancelAddListButtonsContainer">
                    <a href="/lists" class="btn formLabel">Cancel</a>
                    <button type="submit" id="addListButton" class="btn formLabel redButton ms-auto">Save</button>
                </div>
            </div>
        </form>
    </div>
    <script src="/viewEditListScript.js"></script>
</body>
