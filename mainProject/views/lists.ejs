<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="/style.css">
        <link rel="icon" href="/icon.png?v=1.1">
        <title>Re-Mind - Lists</title>
    </head>
    <body class="reMindPage">
        <%- include('partials/navbar') %>
        <div class="container-xxl container-fluid remindBodyText">
            <div class="row justify-content-center">
                <div class="col-12 mt-2">
                    <h3 class="homePageAndListHeader mb-0">All Lists</h3>
                </div>
                <div class="row justify-content-center">
                    <div class="col-3">

                    </div>
                    <div class="col-3 ms-3">
                        
                    </div>
                    <div class="col-3 alignTextEnd ms-3 me-1 addButton">
                        <a href="lists/add" class="reMindLinks">+ Add List</a>
                    </div>
                    <% if (Object.keys(passedLists).length > 0) { %>
                        <% for (let listCounter = 0; listCounter < Object.keys(passedLists).length; listCounter++) { %>
                            <% if (listCounter % 3 == 0) { %>
                                <div class="col-3 shadow mb-3 pt-1 pb-2 remindHomeTiles">
                            <% } else { %>
                                <div class="col-3 shadow ms-3 mb-3 pt-1 pb-2 remindHomeTiles">
                            <% } %>
                                <a href="/lists/<%-passedLists[listCounter].id%>" class="tileLink">
                                    <h4 class="homePageAndListHeader">
                                        <%= passedLists[listCounter].name %>
                                    </h4>
                                    <ul class="listItemUL">
                                        <% for (let itemCounter = 0; itemCounter < 10 && itemCounter < Object.keys(passedLists[listCounter].items).length; itemCounter++) { %>
                                            <% if (passedLists[listCounter].items[itemCounter][1] == true) {%>
                                                <li class="checkedItem"><%= passedLists[listCounter].items[itemCounter][0] %></li>
                                            <% } else {%>
                                                <li><%= passedLists[listCounter].items[itemCounter][0] %></li>
                                            <% } %>
                                        <% } %>
                                    </ul>
                                    <% if (Object.keys(passedLists[listCounter].items).length > 10) { %>
                                        And <%=passedLists[listCounter].items.length-10%> more item(s) not shown here.
                                    <% } %>
                                </a>
                            </div> 
                        <% } %>
                    <% } %>
                </div>
            </div>
        </div>
        <script>
            let passedReminders = <%- JSON.stringify(passedReminders) %>;
        </script>
        <script src="notificationHandler.js"></script>
        <script>
            if ('serviceWorker' in navigator) {
              navigator.serviceWorker.register('/notification.js');
            }
            else
            {
                console.log("Error: Service Worker not Loaded");
            }
        </script>
    </body>
</html> 