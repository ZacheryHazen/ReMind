<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="/style.css">
        <link rel="icon" href="icon.png">
        <title>Re-Mind - Lists</title>
    </head>
    <body class="reMindPage">
        <%- include('partials/navbar') %>
        <div class="container-xxl container-fluid remindBodyText">
            <div class="row justify-content-center">
                <div class="col-12 mt-2 mb-1">
                    <h3 class="homePageAndListHeader">All Lists</h3>
                </div>
                <div class="row justify-content-center">
                    <% if (Object.keys(lists).length > 0) { %>
                        <% for (let listCounter = 0; listCounter < Object.keys(lists).length; listCounter++) { %>
                            <% if (listCounter == 0 || listCounter == 3) { %>
                                <div class="col-3 shadow mb-3 pt-1 remindHomeTiles">
                            <% } else { %>
                                <div class="col-3 shadow ms-3 mb-3 pt-1 remindHomeTiles">
                            <% } %>
                                <h4 class="homePageAndListHeader">
                                    <%= lists[listCounter].name %>
                                </h4>
                                <ul>
                                    <% for (let itemCounter = 0; itemCounter < 10 && itemCounter < Object.keys(lists[listCounter].items).length; itemCounter++) { %>
                                        <li>
                                            <%= lists[listCounter].items[itemCounter] %>
                                        </li>
                                    <% } %>
                                </ul>
                            </div> 
                        <% } %>
                    <% } %>
                </div>
            </div>
        </div>
    </body>
</html> 