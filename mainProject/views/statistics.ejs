<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
        <link rel="stylesheet" href="/style.css">
        <link rel="icon" href="icon.png?v=1.1">
        <title>Re-Mind - Statistics</title>
    </head>
    <body class="reMindPage">
        <%- include('partials/navbar') %>
        <div class="container-xxl container-fluid remindBodyText">
            <div class="row justify-content-center">
                <div class="col-12 mt-2">
                    <h3 class="homePageAndListHeader mb-2">Weekly Statistics</h3>
                </div>
                <div class="col-3"></div>
                <div class="col-6 remindFormTiles p-2">
                    <div class="container-fluid statisticTable">
                        <% for (let counter = 0; counter < weekStatistics.length; counter++) { %>
                            <div class="row statisticRow ms-0 me-0" id=<%="week"+ counter%>>
                                <div class="col-6 statisticHeader"><%=weekStatistics[counter].header%></div>
                                <div class="col-6 statisticRating">
                                    Average Rating: <%=weekStatistics[counter].overallRating%>
                                </div>
                            </div>
                            <% for (let ratingCounter = 0; ratingCounter < weekStatistics[counter].ratings.length; ratingCounter++) { %>
                                <% if (ratingCounter == weekStatistics[counter].ratings.length-1) { %>
                                    <div class="row statisticLastDescription ms-0 me-0" name=<%="week"+ counter + "info"%> hidden>
                                <% } else { %>
                                    <div class="row statisticDescription ms-0 me-0" name=<%="week"+ counter + "info"%> hidden>
                                <% } %>
                                    <div class="col-6">
                                        <% let currentReview = passedReviews.find(r => r.id == weekStatistics[counter].reviewIds[ratingCounter]) %>
                                        <% if (currentReview.type == "other") { %>
                                            <%= currentReview.name %>
                                        <% } else if (currentReview.type == "reminder") { %>
                                            <%= reminders.find(reminder => reminder.id == currentReview.reminderID).name %>
                                        <% } else if (currentReview.type == "day") { %>
                                            Day Review
                                        <% } %>
                                        </div>
                                    <div class="col-6"><%=weekStatistics[counter].ratings[ratingCounter]%></div>
                                </div>
                            <% } %>
                        <% } %>
                    </div>
                </div>
                <div class="col-3"></div>
                <div class="col-12 mt-2">
                    <h3 class="homePageAndListHeader mb-2">Daily Statistics</h3>
                </div>
                <div class="col-3"></div>
                <div class="col-6 remindFormTiles p-2">
                    <div class="container-fluid statisticTable">
                        <% for (let counter = 0; counter < dayStatistics.length; counter++) { %>
                            <div class="row statisticRow ms-0 me-0" id=<%="day"+ counter%>>
                                <div class="col-6 statisticHeader"><%=dayStatistics[counter].header%></div>
                                <div class="col-6 statisticRating">
                                    Average Rating: <%=dayStatistics[counter].overallRating%>
                                </div>
                            </div>
                            <% for (let ratingCounter = 0; ratingCounter < dayStatistics[counter].ratings.length; ratingCounter++) { %>
                                <% if (ratingCounter == dayStatistics[counter].ratings.length-1) { %>
                                    <div class="row statisticLastDescription ms-0 me-0" name= <%="day" + counter + "info"%> hidden>
                                <% } else { %>
                                    <div class="row statisticDescription ms-0 me-0" name=<%="day" + counter + "info"%> hidden>
                                <% } %>
                                    <div class="col-6">
                                        <% let currentReview = passedReviews.find(r => r.id == dayStatistics[counter].reviewIds[ratingCounter]) %>
                                        <% if (currentReview.type == "other") { %>
                                            <%= currentReview.name %>
                                        <% } else if (currentReview.type == "reminder") { %>
                                            <%= reminders.find(reminder => reminder.id == currentReview.reminderID).name %>
                                        <% } else if (currentReview.type == "day") { %>
                                            Day Review
                                        <% } %>
                                        </div>
                                    <div class="col-6"><%=dayStatistics[counter].ratings[ratingCounter]%></div>
                                </div>
                            <% } %>
                        <% } %>
                    </div>
                </div>
                <div class="col-3"></div>
            </div>
        </div>
        <script src="statisticsScript.js"></script>
        <script>
            let passedReminders = <%- JSON.stringify(passedReminders) %>;
        </script>
        <script src="notificationHandler.js"></script>
        <script>
            if ('serviceWorker' in navigator) {
              navigator.serviceWorker.register('/notification.js');
            }
            else
            {
                console.log("Error: Service Worker not Loaded");
            }
        </script>
    </body>
</html>